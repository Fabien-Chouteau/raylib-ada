with "config/raylib_config.gpr";
project Raylib is

   for Library_Name use "RaylibAda";
   for Library_Version use Project'Library_Name & ".so." & Raylib_Config.Crate_Version;

   for Languages use ("Ada", "C");
   for Source_Dirs use ("src/", "config/", "raygui/src/");
   for Object_Dir use "obj/" & Raylib_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Library_Dir use "lib";

   type Library_Type_Type is ("relocatable", "static", "static-pic");
   Library_Type : Library_Type_Type :=
     external ("RAYLIB_LIBRARY_TYPE", external ("LIBRARY_TYPE", "static"));
   for Library_Kind use Library_Type;

   package Compiler is
      for Default_Switches ("Ada") use Raylib_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Raylib;
